{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch Debug Target",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/example_debug",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Make Debug"
        },
        {
            "name": "(run) Release Target",
            "type": "cppdbg",
            "request": "launch",
